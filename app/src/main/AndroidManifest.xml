<manifest package="com.example.m_hike"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="M-Hike"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".AddObservationActivity" android:exported="false" />
        <activity android:name=".AddHikeActivity" android:exported="false" />
        <activity android:name=".HikeDetailActivity" android:exported="false" />
        <activity android:name=".SearchActivity" android:exported="false" />

        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
